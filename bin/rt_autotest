#!/bin/sh
#                      rt_autotest
#                     -------------
# Description:
#   Link files into a local source directory
#
#-----------------------------------------------------------------------------
ocotillo_home_path=$OCO_HOME
old_dir="`pwd`"

datadir=$OCO_HOME"/samples/GreyIsothermal"
echo $datadir
cd $datadir
make cleanall
rt_setup
make
./source/flux_feautrier.x
diff output/diagnostics.txt reference.out
echo
echo "========================================================================"
echo

datadir=$OCO_HOME"/samples/NongreyAGN"
echo $datadir
cd $datadir
make cleanall
rt_setup
make
./source/flux_feautrier.x
diff output/diagnostics.txt reference.out
echo
echo "========================================================================"
echo

datadir=$OCO_HOME"/samples/ReadFromAthena"
echo $datadir
cd $datadir
make cleanall
rt_setup
make
./source/flux_feautrier.x
diff output/diagnostics.txt reference.out
cd $old_dir
echo
echo "========================================================================"
echo

datadir=$OCO_HOME"/samples/multiInTest"
echo $datadir
cd $datadir
make cleanall
rt_setup
make
./source/flux_feautrier.x
diff output/diagnostics.txt reference.out
cd $old_dir
echo
echo "========================================================================"
echo
